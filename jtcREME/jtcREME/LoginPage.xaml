<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jtcREME.LoginPage"
             Title="Login" BackgroundColor="WhiteSmoke">
    <ContentPage.Content>

        <StackLayout VerticalOptions="Center">
            <Image Source="https://jidetaiwoandco.com/images/prem.png" BackgroundColor="White"></Image>

            <Entry x:Name="username" Placeholder="Username" ClearButtonVisibility="WhileEditing" TextColor="White"/>
            <Entry x:Name="pwd" TextColor="White" Placeholder="Password" IsPassword="true" ClearButtonVisibility="WhileEditing" />
            <Button Text="Sign in" Clicked="OnSignInClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>